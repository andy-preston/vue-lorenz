{
    "name": "lorenz",
    "description": "The Lorenz Attractor",
    "version": "1.0.0",
    "author": "Andy Preston",
    "private": true,
    "license": "The Unlicense",
    "dependencies": {
        "bootstrap-vue": "^2.19.0",
        "bootstrap": "^4.5.3",
        "vue": "^2.6.12",
        "xyscope": "git+ssh://git@gitlab.com:edgeeffect/xyscope.git"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@vue/test-utils": "^1.1.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-jest": "^26.6.3",
        "babel-loader": "^8.1.0",
        "css-loader": "^5.0.1",
        "dart-sass": "^1.25.0",
        "eslint-plugin-jsdoc": "^30.7.6",
        "eslint-plugin-vue": "^7.1.0",
        "eslint": "^7.12.1",
        "jest": "^26.6.3",
        "mini-css-extract-plugin": "^1.3.0",
        "sass-loader": "^10.0.5",
        "sass": "^1.29.0",
        "style-loader": "^2.0.0",
        "vue-cli": "^2.9.6",
        "vue-jest": "^3.0.7",
        "vue-loader": "^15.9.5",
        "vue-template-compiler": "^2.6.12",
        "webpack-cli": "^4.1.0",
        "webpack": "^5.4.0"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "node": "current"
                    }
                }
            ]
        ]
    },
    "eslintConfig": {
        "extends": [
            "plugin:jsdoc/recommended",
            "eslint:recommended",
            "plugin:vue/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        },
        "env": {
            "es6": true,
            "browser": true,
            "commonjs": true
        },
        "plugins": [
            "jsdoc"
        ],
        "rules": {
            "vue/html-indent": [
                "error",
                4
            ],
            "vue/html-self-closing": [
                "error",
                {
                    "html": {
                        "void": "never",
                        "normal": "never",
                        "component": "never"
                    },
                    "svg": "never",
                    "math": "never"
                }
            ],
            "vue/max-attributes-per-line": [
                "error",
                {
                    "singleline": 2,
                    "multiline": {
                        "max": 1,
                        "allowFirstLine": false
                    }
                }
            ]
        }
    },
    "jest": {
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "json",
            "vue"
        ],
        "transform": {
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.js$": "babel-jest"
        }
    },
    "scripts": {
        "build": "yarn eslint src/js/*.js src/vue/*.vue && yarn jest && yarn webpack"
    }
}